<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Colors -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FF9800"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
    
    <!-- Button Styles -->
    <Style TargetType="Button">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.8"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
    </Style>
    
    <Style x:Key="ErrorButton" TargetType="Button" BasedOn="{StaticResource {StaticResource {x:Type Button}}}">
        <Setter Property="Background" Value="{StaticResource ErrorColor}"/>
    </Style>
    
    <!-- TextBox Style -->
    <Style TargetType="TextBox">
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <!-- ListBox Style -->
    <Style TargetType="ListBox">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
</ResourceDictionary>

